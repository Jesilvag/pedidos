@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous"></script>
    <title></title>
</head>
<body>
    <div class="row">
    <div id="clientes" class="col-sm-4">
        <label class="label-form col-sm-4" >Clientes:</label>
        <div class="col-sm-8">
            <select id="selClientes" class="form-control" ></select>
        </div>

    </div>
        <div class="col-sm-4">
            <label class="label-form col-sm-4">Categorias:</label>
            <div class="col-sm-8">
                <select id="selCategorias" class="form-control"></select>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $.getJSON("http://localhost:50062/ServiceCliente.svc/clientes", function (data, status) {
                var html = $("#selClientes");
                 var obj=$.parseJSON(data);
                $.each(obj, function (k, v) {
                    html.append('<option value="' + v.IdCliente + '">' + v.Nombres +" "+ v.Apellidos + '</option>');
                });
                
            });
            $.getJSON("http://localhost:50062/ServiceCategoria.svc/categorias", function (data, status) {
                var html = $("#selCategorias");
                var obj = $.parseJSON(data);
                $.each(obj, function (k, v) {
                    html.append('<option value="' + v.IdCategoria + '">' + v.Nombre+ '</option>');
                });

            });
        });
    </script>
</body>
</html>

